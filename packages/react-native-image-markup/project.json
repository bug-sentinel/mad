{
  "name": "react-native-image-markup",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/react-native-image-markup/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "build": {
      "executor": "@nrwl/web:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/react-native-image-markup",
        "tsConfig": "packages/react-native-image-markup/tsconfig.lib.json",
        "project": "packages/react-native-image-markup/package.json",
        "entryFile": "packages/react-native-image-markup/src/index.ts",
        "external": ["react/jsx-runtime", "react-native"],
        "rollupConfig": "@nrwl/react/plugins/bundle-rollup",
        "assets": [
          {
            "glob": "packages/react-native-image-markup/README.md",
            "input": ".",
            "output": "."
          }
        ]
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/react-native-image-markup/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/react-native-image-markup/jest.config.ts",
        "passWithNoTests": true
      }
    }
  }
}
